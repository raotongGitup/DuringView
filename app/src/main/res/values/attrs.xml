<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--实现波浪进度效果-->
    <declare-styleable name="LD_WaveView">
        <attr name="wave_color" format="color"></attr>
        <attr name="wave_circle" format="boolean"></attr>
    </declare-styleable>
    <!--imageview图片成圆形图-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- 卫星蜘蛛网图 -->
    <declare-styleable name="RadarView">
        <attr name="netColor" format="color"/><!--蜘蛛网线颜色-->
        <attr name="netWidth" format="dimension"/><!--蜘蛛网线宽度-->
        <attr name="rvTextColor" format="color"/><!--字体颜色-->
        <attr name="rvTextSize" format="dimension"/><!--字体大小-->
        <attr name="coverColor" format="color"/><!--阴影面积颜色-->
        <attr name="maxRadius" format="dimension"/><!--最大直径-->
        <attr name="netPointColor" format="color"/><!--节点颜色-->
        <attr name="netPointRadius" format="dimension"/><!--节点直径-->
    </declare-styleable>
</resources>